@model IEnumerable<Crm.Models.usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios</h2>


<table id="table3" class="table table-striped table-hover nowrap " data-page-length='10' width="100%">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Email</th>
            <th>Rol</th>
            <th style="width:70px">Acción</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="odd gradeX">

            <td>@item.nombre @item.apellido</td>
            <td>@item.usuario1</td>
            <td>@item.rol</td>
            <td>
                <a class="btn btn-secondary btn-xs selectact">Actualizar <span class="icon-dropdown s7-angle-down "></span></a>
                <a href="" class="btn btn-secondary btn-xs selectact">Eliminar <span class="icon-dropdown s7-angle-down "></span></a>
            </td>

        </tr>
        }
    </tbody>
</table>
